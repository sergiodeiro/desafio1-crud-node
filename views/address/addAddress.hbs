{{!-- // AUTOR: MAURICIO LANNER --}}
<h3>{{viewTitle}}</h3>

<form action="/address" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{address._id}}">
    <div class="form-group">
        <label>Tipo (Rua, Avenida, Pra√ßa ...)</label>
        <input type="text" class="form-control" name="type" placeholder="Tipo" value="{{address.type}}">
        <div class="text-danger">
            {{address.typeError}}</div>
    </div>
    <div class="form-group">
        <label>Logradouro</label>
        <input type="text" class="form-control" name="address" placeholder="Logradouro" value="{{address.address}}">
        <div class="text-danger">
            {{address.addressError}}
        </div>
    </div>
    <div class="form-group">
        <label>Complemento</label>
        <input type="text" class="form-control" name="complement" placeholder="Complemento"
            value="{{address.complement}}">
        <div class="text-danger">
            {{address.complementError}}
        </div>
    </div>
    <div class="form-group">
        <label>Numero</label>
        <input type="text" class="form-control" name="number" placeholder="Numero" value="{{address.number}}">
        <div class="text-danger">
            {{address.numberError}}
        </div>
    </div>
    <div class="form-group">
        <label>CEP</label>
        <input type="text" class="form-control" name="cep" placeholder="00000-000" value="{{address.cep}}">
        <div class="text-danger">
            {{address.cepError}}
        </div>
    </div>
    <div class="form-group">
        <label>Bairro</label>
        <input type="text" class="form-control" name="district" placeholder="Bairro" value="{{address.district}}">
        <div class="text-danger">
            {{address.districtError}}
        </div>
    </div>
    <div class="form-group">
        <label>Cidade</label>
        <input type="text" class="form-control" name="city" placeholder="Cidade" value="{{address.city}}">
        <div class="text-danger">
            {{address.cityError}}
        </div>
    </div>

    <div class="form-group">
        <label>Estado</label>
        <input type="text" class="form-control" name="state" placeholder="Estado" value="{{address.state}}">
        <div class="text-danger">
            {{address.stateError}}
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success"><i class="fa fa-database"></i> Salvar</button>
        <a class="btn btn-secondary" href="/address/list"><i class="fa fa-list-alt"></i> Ver Lista</a>
    </div>
</form>